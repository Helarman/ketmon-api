{
  "kind": "collectionType",
  "collectionName": "employers",
  "info": {
    "singularName": "employer",
    "pluralName": "employers",
    "displayName": "employers",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "integer",
      "min": 0,
      "max": 5
    },
    "locationCoordinates": {
      "type": "customField",
      "customField": "plugin::google-maps.location-picker"
    },
    "locationName": {
      "type": "string",
      "required": true
    },
    "isScammer": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "employer"
    }
  }
}
